<?xml version="1.0" encoding="UTF-8"?>
<web-app id="todaysoft" version="2.4"
	xmlns="http://java.sun.com/xml/ns/j2ee"
	xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xsi:schemaLocation="http://java.sun.com/xml/ns/j2ee http://java.sun.com/xml/ns/j2ee/web-app_2_4.xsd">

	<display-name>log-admin-web</display-name>
	<!-- 加载指定的资源文件 -->
	<context-param>
		<param-name>contextConfigLocation</param-name>
		<param-value>
		classpath*:config/spring/*.xml,
		classpath*:applicationContext-mvc.xml,
		</param-value>
	</context-param>
	<!-- Spring listener-->
   	<listener>
     	<listener-class>ch.qos.logback.ext.spring.web.LogbackConfigListener</listener-class>
   	</listener> 
	<listener>
     	<listener-class>com.elend.p2p.spring.ElendContextLoaderListener</listener-class>
   	</listener> 
	<!--  注意：发布时一定要去掉  
	<servlet>
    	<servlet-name>default</servlet-name>
	    <servlet-class>org.mortbay.jetty.servlet.DefaultServlet</servlet-class>
	    <init-param>
	      <param-name>useFileMappedBuffer</param-name>
	      <param-value>false</param-value>
	    </init-param>
	    <load-on-startup>0</load-on-startup>
  	</servlet>
 	--> 
	<filter>
		<filter-name>SpringEncodingFilter</filter-name>
		<filter-class>org.springframework.web.filter.CharacterEncodingFilter</filter-class>
		<init-param>
			<param-name>encoding</param-name>
			<param-value>utf-8</param-value>
		</init-param>
		<init-param>
		   <param-name>forceEncoding</param-name>
		   <param-value>true</param-value>
		 </init-param>
	</filter>
	
	<filter-mapping>
  		<filter-name>SpringEncodingFilter</filter-name>
  		<url-pattern>/*</url-pattern>
  	</filter-mapping>
	<servlet>
		 <servlet-name>log-admin-web</servlet-name>
		 <servlet-class>
		 	 org.springframework.web.servlet.DispatcherServlet
		 </servlet-class>
		<init-param> 
			<param-name>contextConfigLocation</param-name> 
			<param-value>classpath*:/p2p-servlet.xml</param-value>
		</init-param>
		
		<!-- 默认情况下，spring会初始化很多异常解析器，如果想让spring使用我们自定义的异常解析器，就需要加上这个参数。取消spring的默认设置 -->
		
	    <init-param>
	        <param-name>detectAllHandlerExceptionResolvers</param-name>   
	        <param-value>false</param-value>  
	    </init-param>  
     	
		 <load-on-startup>1</load-on-startup>	 
	</servlet>
	<!-- 分布式session start -->
	<filter>
		<filter-name>distributedSessionFilter</filter-name>
		<filter-class>org.springframework.web.filter.DelegatingFilterProxy</filter-class>
		<init-param>
			<param-name>targetFilterLifecycle</param-name>
			<param-value>true</param-value>
		</init-param>
	</filter>
	
	<filter-mapping>
		<filter-name>distributedSessionFilter</filter-name>
		<url-pattern>/*</url-pattern>
	</filter-mapping>
	<!-- 分布式session end -->
	<servlet>
		<display-name>InitResourceServlet</display-name>
		<servlet-name>InitResourceServlet</servlet-name>
		<servlet-class>com.elend.log.servlet.ResourceUrlServlet</servlet-class>
		<load-on-startup>2</load-on-startup>
	</servlet>
	
	<servlet-mapping>
		 <servlet-name>log-admin-web</servlet-name>
		 <url-pattern>*.do</url-pattern>
	</servlet-mapping>	
	<servlet-mapping>
		 <servlet-name>log-admin-web</servlet-name>
		 <url-pattern>*.jspx</url-pattern>
	</servlet-mapping>
	<!-- 
	<servlet-mapping>
		 <servlet-name>p2p-admin</servlet-name>
		 <url-pattern>/</url-pattern>
	</servlet-mapping>
	 -->
	<welcome-file-list>
		<welcome-file>index.html</welcome-file>
	</welcome-file-list>
</web-app>
